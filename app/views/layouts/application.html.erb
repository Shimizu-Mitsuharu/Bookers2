<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="header">
    <h2 class="bookers">Bookers</h2>
    <ul class="ul-top">
      <% if user_signed_in? %>
      <li><%= link_to "Home", "/users", class: "glyphicon glyphicon-home home" %>
      </li>
      <li><%= link_to "Users", "/users" , class: "glyphicon glyphicon-user users" %>
      </li>
      <li><%= link_to "Books", "/books", class: "glyphicon glyphicon-book books" %>
      </li>
      <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %>
      </li>
      <% else %>
      <li><%= link_to "Home", root_path , class: "glyphicon glyphicon-home home" %>
      </li>
      <li><%= link_to "About", layouts_about_path , class: "glyphicon glyphicon-paperclip about" %>
      </li>
      <li><%= link_to "sign up", new_user_registration_path , class: "glyphicon glyphicon-edit sign_up" %>
      </li>
      <li><%= link_to "login", new_user_session_path , class: "glyphicon glyphicon-new-window sign_in" %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="clear_fix"></div>
  <% if flash[:notice]%>
  <div class="flash">
    <%= flash[:notice]%>
  </div>
  <%end%>
  <%= yield %>
</body>


<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</html>
