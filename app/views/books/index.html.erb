<!-- 共通部分 -->
<div class="box">
  <div class= "col-xs-3">
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.profile %></th>
      </tr>
    </table>

    <div class='row'>
      <%= link_to"", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
    </div>

      <h2>New book</h2>
      <%= form_for(@book, url: books_path) do |f| %>
      <div class="field row">
        <label for="book_title">Title</label>
        <%= f.text_field :title,class: "col-xs-12" %>
      </div>
      <div class="field row">
        <label for="book_opinion">Opinion</label>
        <%= f.text_field :Opinion,class: "col-xs-12" %>
      </div>
      <div class="actions row">
        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
<!-- 共通部分 -->

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.Opinion %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
