<div class="box">
  <div class= "col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
    <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= @user.profile %>
    <%= link_to"", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
    <%= form_for(@book, url: books_path) do |f| %>
    <h2>New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>
    <h4>Opinion</h4>
    <%= f.text_field :Opinion,class: "col-xs-12" %>
    <nav><%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %></nav>
    <% end %>
  </div>
</div>

<div class='col-xs-9'>
  <h2>Users</h2>
  <table class='table'>
<thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'40x40') %></td>
          <td><%= user.name%></td>
          <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <!--users一覧 -->

  </div>
</div>