<div class="body">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>User info</h1>
			<% @user.errors.full_messages.each do |message| %>
			<%= message %>
			<%end%>
			<%= form_for(@user) do |f|%>
			<label>Name</label><br>
			<%= f.text_field :name, class: "name width"%><br>
			<label>Image</label><br>
			<%= attachment_image_tag @user, :profileimage, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %><br>
			<label>Introduction</label><br>
			<%= f.text_area :profile, class: "introduction width clear_fix" %><br>

			<%= f.submit "Update User", class: "btn btn-primary width"%><br>
			<%end%>
		</div>
	</div>
</div>
