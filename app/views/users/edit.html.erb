<div class="body">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>User info</h1>
			<% @user.errors.full_messages.each do |message| %>
			<%= message %>
			<%end%>
			<%= form_for(@user) do |f|%>
			<label>Name</label><br>
			<%= f.text_field :name, class: "name width"%><br>
			<label>Image</label><br>
			<%= form_for @user do |form| %>
			<%= form.attachment_field :profile_image %>
			<% end %>
			<label>Introduction</label><br>
			<%= f.text_area :profile, class: "introduction width clear_fix" %><br>

			<%= f.submit "Update User", class: "btn btn-primary width"%><br>
			<%end%>
		</div>
	</div>
</div>
